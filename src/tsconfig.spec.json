{
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "../dist/cjs",
    "module": "commonjs",
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.js",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ]
}
