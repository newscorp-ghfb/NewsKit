      "commit-msg": "node githooks/commitmsg",
      "pre-commit": "lint-staged && node githooks/update-readme-node-version.js",
      "post-merge": "yarn dependencies:check",
      "post-checkout": "yarn dependencies:check"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:code:base . --fix",
      "git add"
    ]
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nrwl/rspack:rspack",
        "options": {
          "rspackConfig": "rspack.config.js"
        },
        "configurations": {}
      },
      "lint": {
        "executor": "@nrwl/linter:eslint",
        "outputs": [
          "{options.outputFile}"
        ],
        "options": {
          "lintFilePatterns": [
            "./src/**/*.{ts,tsx,js,jsx}"
          ]
        }
      },
      "lint:code:comps": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "lint:code:docs": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "lint:code": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "lint:markdown": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "lint:next": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "test:unit:run": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "test:unit:comps": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "test:unit:docs": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      }
    }
  }
